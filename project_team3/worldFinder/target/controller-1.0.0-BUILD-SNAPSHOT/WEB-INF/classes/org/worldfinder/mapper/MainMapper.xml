<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.worldfinder.mapper.MainMapper">
    <select id="readCountry" resultType="org.worldfinder.domain.CountryClassVO">
             SELECT * FROM C_CLASS_TABLE3
    </select>
    <insert id="writeRequest" parameterType="org.worldfinder.domain.RequestVO">
        insert into REQUEST_TABLE3 values (#{rq_name},#{rq_address},#{rq_tel},#{rq_category},#{rq_url})
    </insert>
    <select id="readRequest" resultType="org.worldfinder.domain.RequestVO">
        SELECT * FROM REQUEST_TABLE3
    </select>
    <select id="readReport" resultType="org.worldfinder.domain.ReportVO" parameterType="String">
        select idx,r_category  ,count(*)as r_count from report_table3
        where r_category = #{category}
        GROUP By idx, r_category
    </select>
</mapper>