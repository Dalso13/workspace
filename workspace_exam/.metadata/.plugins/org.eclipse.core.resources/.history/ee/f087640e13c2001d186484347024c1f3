	<form action="#" method="get">
		<!-- 텍스트 상자 -->
		<h3>텍스트 상자</h3>
		일반 텍스트 상자 : <input type="text" placeholder="일반 텍스트 상자"><br>
		비밀번호 텍스타 상자 : <input type="password" placeholder="비밀번호"><br/>
		숫자용 텍스트 상자 : <input type="number"><br>
		
		
		<hr/>
		
		<!-- 2. 버튼 -->
		<h3>버튼</h3>
		일반 버튼 : <input type="button" value="전송1"> <br>
		일반 버튼 : <button>전송2</button>
		전송 버튼 : <input type="submit" value="전송3">
		취소 버튼 : <input type="reset" value="취소">
		숨김 버튼 : <input type="hidden" name="age" value="20">		
	</form>



</body>
