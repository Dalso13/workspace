<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	
	
	function goLogin() {
	
		let form = document.forms.myForm;
		
		if (form.id.value == "") {
			alert("아이디 입력 해주세요");
			return;
		} else if ((form.pw.value).length > 16 || (form.pw.value).length < 8) {
			alert("비밀번호는 8~16자 사이를 입력 해주세요");
			form.pw.value = ""; //데이터 초기화
			form.pw.focus();	// pw로 이동
			
			return;
		}
		
		// 자바스크립트 코드로 데이터 submit
		form.submit();
	}
</script>
</head>
<body>
	<form action="#" name = myForm onsubmit="return goLogin();">
		<label for="uid">아이디</label>
		<input type="text" name="id" id="uid"> <br>
		<label for="upw">비밀번호</label>
		<input type="password" name = "pw" id="upw"> <br>
		<input type="submit" value="로그인">
	</form>
</body>
</html>