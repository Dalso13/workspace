<script type="text/javascript">
	//아이디 정규식		
	var regId = /^[0-9a-z]{8,16}$/;		 
	// 비밀번호 정규식
	var regPw = /^[0-9a-zA-Z]{8,16}$/;	
	// 성함 정규식 
	var regName = /^[가-힣]{2,6}$/;	 
	// 이메일 정규식
	var regEmail = /^[0-9a-zA-Z]([-_\.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_\.]?[0-9a-zA-Z])*\.[a-zA-Z]{2,3}$/i;
	// 주민등록번호 정규식(앞자리)
	var regPid1 = /^\d{6}$/;
	// 주민등록번호 정규식(뒷자리)
	var regPid2 = /^\d{7}$/;
	// 생년월일
	var regyear = /^\d{4}$/;
	var regdate = /^[1-9]|1[012]$/;
	var regdate1 = /^[1-9]|[12][0-9]|3[01]$/;
	
	function check() {
		let form = document.forms.myForm;
	/* 	
	 	if (!regId.exec(form.uid.value)) {
			alert("아이디를 정확히 입력해주세요");
			return;
		}
	 	if (!regPw.exec(form.upw.value)) {
			alert("비밀번호를 정확히 입력해주세요");
			return;
		}
		if (form.upw.value != form.upws.value) {
			alert("비밀번호가 일치하지 않습니다");
			return;
		}  
		 if (regEmail.exec(form.uem1.value + form.uem2.value)) {
			alert("이메일을 정확히 입력해주세요")
			return;
		} 
		 if (!regName.exec(form.uname.value)) {
			alert("이름을 정확히 입력해 주세요");
			return;
		}  */
		if (!regyear.exec(form.udate1.value) 
				|| !regdate.exec(form.udate2.value)
					|| !regdate1.exec(form.udate3.value)){
			alert("날짜를 정확히 입력해 주세요");
			return;
		}
		
		form.submit();
	}
	
	
	function regPid() {
		let form = document.forms.myForm;
		if (!regPid1.exec(form.ussn1.value) || !regPid2.exec(form.ussn2.value)) {
			alert("주민번호를 정확히 입력해주세요");
		}
	}
	
</script>
