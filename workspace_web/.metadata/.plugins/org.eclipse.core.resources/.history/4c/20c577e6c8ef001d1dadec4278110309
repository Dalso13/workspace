<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	/* 
		1. 빈 객체 car 생성
		2. 객체 car에 동적으로 프로퍼티 추가
			1) model = 아무거나
			2) speed = 0
			3) oil	= 50;
			4) MAX_SPEED = 100
			5) speedUp 함수 -> speed 10 증가시 oil 5 사용
			6) speedDown 함수 -> speed 감소에 oil 미사용
	*/
	
	let car = {};
	
	car.model = "G80";
	car.speed = 0;
	car.oil = 50;
	car.MAX_SPEED = 100;
	
	
	car.speedUp = function (speed) {
			if (car.speed + speed > car.MAX_SPEED) {
				document.write("<h3> 최고 속도치를 넘습니다!<br>최고 속도치로 맞춥니다. </h3>");
				speed = car.MAX_SPEED - car.speed;
			}
			
			if (speed/2 > car.oil) {
				document.write("<h3>" +"<br>기름부족 !!!<br>"
					+ "추가 속도 : " + speed + " 필요한 기름량 : "+ speed/2 
						+ " 잔여 기름량 : " + car.oil + "<br> </h3>");
				
				speed = 0;
			}
			car.speed += speed;
			let count = speed/10;
			
			while (count > 0) {
				count--;
				car.oil -= 5;
			}
			
	}
	
	car.speedDown = function speedDown(speed) {
			car.speed -= speed;
			if (car.speed <= 0) {
				car.speed = 0;
			}
		}
	
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	
	car.speedUp(10);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	
	car.speedUp(10);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	
	car.speedDown(10);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	
	car.speedUp(40);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	
	car.speedUp(50);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	
	car.oil = 100;
	car.speedUp(100);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
</script>
</head>
<body>

</body>
</html>