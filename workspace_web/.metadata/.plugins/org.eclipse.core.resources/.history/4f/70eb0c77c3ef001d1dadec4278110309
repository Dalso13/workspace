<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	/* 
		1. 빈 객체 car 생성
		2. 객체 car에 동적으로 프로퍼티 추가
			1) model = 아무거나
			2) speed = 0
			3) oil	= 50;
			4) MAX_SPEED = 100
			5) speedUp 함수 -> speed 10 증가시 oil 5 사용
			6) speedDown 함수 -> speed 감소에 oil 미사용
	*/
	
	let car = {};
	
	car.model = "G80";
	car.speed = 0;
	car.oil = 50;
	car.MAX_SPEED = 100;
	
	
	function speedUp(speed) {
			if (speed/2 > car.oil) {
				document.write("<h2> 속도 추가 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
				speed = 0;
			}
		
			car.speed += speed;
			let count = speed/10;
			
			while (count > 0) {
				count--;
				car.oil -= 5;
			}
			
	}
	
	function speedDown(speed) {
		car.speed -= speed;
		if (car.speed <= 0) {
			car.speed = 0;
		}
	}
	
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	speedUp(10);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	speedUp(10);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	speedDown(10);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	speedUp(40);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
	speedUp(50);
	document.write("<h2> 현재 속도 : " + car.speed + " 잔여 기름량 : " + car.oil + "</h2>");
</script>
</head>
<body>

</body>
</html>