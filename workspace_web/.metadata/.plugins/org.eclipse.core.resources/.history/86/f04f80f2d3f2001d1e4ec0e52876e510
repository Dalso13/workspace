<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style type="text/css">
	label{
		display : inline-block;
		width : 70px;
	}
	button {
		margin-top : 5px;
		margin-left: 80px;
	}
</style>
<script type="text/javascript">
		function start() {
			let form = document.forms.myForm;
			let email = form.email.value

		 	if ((form.name.value).length < 2 || (form.name.value).length > 6) {
				alert("성명 다시 입력.")
				form.name.focus();
				
				return;
			}  else if(email.substring(0,1) == "@" || email.substring(email.length-1,email.length) == "@" ||
				email.indexOf("@") == -1) {
				alert("이메일 다시 입력")
				email.focus();
				
				return;
		 	}  else if (String(form.zipCode.value).length != 5){
				alert("우편번호 다시 입력.")
				return;
			} else if(form.region.value == 0) {
				alert("지역 선택해")
				return;
			}
			form.submit();
		}
		
</script>
</head>
<body>
	<form action="#" name="myForm">
		<label for="uName">성명</label>
		<input type="text" name="name" id="uName"> <br>
		
		<label for="uEmail">이메일</label>
		<input type="email" name = "email" id="uEmail"> <br>
		
		<label for="uZipCode">우편번호</label>
		<input type="number" name="zipCode" id="uZipCode"> <br>
		
		<label for="uRegion">지역</label>
		<select name="region"  id="uRegion">
				<option value="0"> ::지역선택:: </option>
				<option value="1"> 서울 </option>
				<option value="2"> 인천 </option>
				<option value="3"> 경기 </option>
		</select> <br>
		<button onclick="start();">전송</button>
	</form>
</body>
</html>