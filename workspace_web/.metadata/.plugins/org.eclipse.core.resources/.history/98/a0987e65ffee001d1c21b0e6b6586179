<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	const date = new Date;
	
	date.setMonth(4);
	date.setDate(24);
	date.setFullYear(2016);
	
	document.write(date);
	
	let week = date.getDay();
	let result;
	
	if (week == 0) {
		result = "SUN";
	} else if (week == 1) {
		result = "MON";
	}  else if (week == 2) {
		result = "TUE";
	}  else if (week == 3) {
		result = "WED";
	}  else if (week == 4) {
		result = "THU";
	}  else if (week == 5) {
		result = "FRI";
	}  else if (week == 6) {
		result = "SAT";
	}
	
	document.write("<br>" + result);
</script>
</head>
<body>

</body>
</html>