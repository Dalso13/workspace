<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	// 1. 입력 받은 구구단을 출력하시오.
	const num = prompt("숫자를 입력하시오.");
	
	for (let i = 1; i <= 9; i++) {
		document.write(`${num} X ${i} = ` + (num * i) + "<br>");
	}
	
	document.write("<br><br>")
	
	
	
	
	// 2. 전체 구구단 추력
		for (let i = 2; i <= 9; i++) {
			for (let j = 1; j <= 9; j++) {
				document.write(`${i} X ${j} = ` + (i * j) + "&nbsp&nbsp ");
				
			}
			document.write("<br>")
		}
	
	document.write("<br>")
	document.write("<br>")
	
	// 3, 테이블(<table></table>)을 이용하여 전체 구구단 출력
	let an = "<table border = '1px solid black;'>";
	
	
	for (let i = 2; i <= 9; i++) {
		an += "<tr>";
			for (let j = 1; j <= 9; j++) {
				let an1 =  i + " X " + j + " = " + (i * j) + "&nbsp";
				an += "<td>" + an1 + "</td>";
			}
		an += "</tr>";
	}
	an += "</table>";
	
	
	const c1 = document.createElement("td");
	const c2 = document.createTextNode("2 X 2 = 4")
	c1.appendChild(c2);
	
</script>
</head>
<body>
</body>
</html>